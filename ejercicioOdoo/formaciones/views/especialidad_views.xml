<odoo>
    <record id='view_especialidad_form' model='ir.ui.view'>
        <field name='name'>formaciones.especialidad.form</field>
        <field name='model'>formaciones.especialidad</field>
        <field name='arch' type='xml'>
            <form string='Especialidades'>
                <group>
                    <field name='name' />
                    <field name='descripcion' />
                </group>
            </form>
        </field>
    </record>

    <record id='view_especialidad_list' model='ir.ui.view'>
        <field name='name'>formaciones.especialidad.list</field>
        <field name='model'>formaciones.especialidad</field>
        <field name='arch' type='xml'>
            <list string='Especialidades'>
                <field name='name' />
                <field name='descripcion' />
            </list>
        </field>
    </record>
</odoo>