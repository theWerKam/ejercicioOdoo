<odoo>
    <record id='view_employees_form' model='ir.ui.view'>
        <field name='name'>acciones_formativas.acciones.tree</field>
        <field name='model'>acciones_formativas</field>
        <field name='inherit_id' ref='hr.view_employee_form' />
        <field name='arch' type='xml'>
            <xpath expr="//notebook" position="inside">
                <page string="Acciones Formativas">
                    <group>
                        <field name='acciones_formativas_id' />
                        <tree>
                            <field name='name' />
                            <field name='curso_id' />
                            <field name='formador_id' />
                        </tree>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>